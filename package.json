{
  "name": "@mojaloop/central-object-store",
  "version": "11.0.2-snapshot",
  "description": "Mojaloop library for common object store",
  "main": "src/index.js",
  "scripts": {
    "audit:resolve": "SHELL=sh resolve-audit --production",
    "audit:check": "SHELL=sh check-audit --production",
    "dep:check": "npx ncu -e 2",
    "dep:update": "npx ncu -u",
    "lint": "eslint ./src/**/*.ts *.js",
    "lint:fix": "eslint --fix ./src/**/*.ts *.js",
    "test": "npm run test:unit",
    "test:coverage": "jest --coverage  --testMatch '**/test/unit/**/*.(test|spec).js'",
    "test:coverage-check": "jest -w 1 --coverage --testMatch '**/test/unit/**/*.(test|spec).js'",
    "test:unit": "jest -w 1 --no-coverage --testMatch '**/test/unit/**/*.(test|spec).js'"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged && npm test",
      "post-commit": "git update-index --again",
      "pre-push": "npm test && npm run updates:check && npm run audit:check"
    }
  },
  "license": "Apache-2.0",
  "author": "ModusBox",
  "contributors": [
    "Georgi Georgiev <georgi.georgiev@modusbox.com>",
    "Miguel de Barros <miguel.debarros@modusbox.com>",
    "Valentin Genev <valenting.genev@modusbox.com>",
    "Lewis Daly <lewisd@crosslaketech.com>"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:mojaloop/central-object-store.git"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org"
  },
  "dependencies": {
    "@mojaloop/central-services-logger": "^10.6.0",
    "mongoose": "^5.11.8"
  },
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "eslint": "7.16.0",
    "eslint-config-standard": "16.0.2",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-standard": "4.1.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "npm-audit-resolver": "2.2.1",
    "npm-check-updates": "10.2.5",
    "nyc": "15.1.0",
    "standard": "16.0.3"
  }
}
